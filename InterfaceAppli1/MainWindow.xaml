<Window x:Class="InterfaceAppli1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfaceAppli1"
        mc:Ignorable="d"
        Title="MoquecaDeRecettes" Height="450" Width="800">
    <DockPanel>
        <WrapPanel DockPanel.Dock="Right" Background="LightGray">
            <Image Source="menu button.png" Height="40" Width="45"/>
        </WrapPanel>

        <Grid DockPanel.Dock="Top" Height="160" VerticalAlignment="Top" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <Border Background="SeaGreen" CornerRadius="20" Visibility="Visible" Width="350" Height="140">
                    <Image Source="logo.png" Height="159" Width="295"/>
                </Border>
            </StackPanel>

            <WrapPanel Grid.Column="1" HorizontalAlignment="Center">
                <Image Source="Chef_F.PNG" Width="150"/>
            </WrapPanel>
        </Grid>
    </DockPanel>
</Window>
