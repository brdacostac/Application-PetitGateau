<Window x:Class="InterfaceAppli1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfaceAppli1"
        mc:Ignorable="d"
        Title="MoquecaDeRecettes" Height="450" Width="800">
    <DockPanel>
        <WrapPanel DockPanel.Dock="Right" Background="LightGray">
            <Image Source="menu button.png" Height="40" Width="45"/>
        </WrapPanel>

        <Grid DockPanel.Dock="Top" Background="LightPink" Height="105" VerticalAlignment="Top" Margin="0,40,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <Border>
                    <Image Source="logo.png"/>
                </Border>
            </StackPanel>

            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="Bienvenue a Moqueca!" FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
